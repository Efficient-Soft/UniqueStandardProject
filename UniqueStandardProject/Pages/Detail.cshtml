@page
@model UniqueStandardProject.Pages.DetailModel
@{
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">

<div class="container-fluid bg-light row mt-5">
    <div class="col-md-8">
        <div id="title">
            <h1>@ViewData["Title"]</h1>
            <p>@ViewData["Description"]</p>
        </div>
    </div>
    <div class="col-md-4">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <!-- The dynamic content will be inserted here -->
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        </div>
        <div class="row wow fadeInUp" id="carouselProduct">
        </div>
    </div>
</div>

<!-- JAVASCRIPT -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    var url = 'api/products/productImgList';
    var title = document.getElementById('title');

    fetch(url)
        .then((res) => res.json())
        .then((response) => {
            if (response.success) {
                if (Array.isArray(response.data)) {
                    generateHtml(response.data);
                    relatedProduct(response.data);
                } else {
                    console.error('The data received is not an array.');
                }
            } else {
                console.error('Request was not successful.');
            }
        })
        .catch((error) => {
            console.error('Error fetching data:', error);
        });

    const generateHtml = (data) => {
        console.log(data);
        var carouselInner = document.querySelector('.carousel-inner');
        data.forEach((player, index) => {
            const uniqueId = `myCarousel-${index}`;
            var item = document.createElement('div');
            item.classList.add('carousel-item');
            if (index === 0) {
                item.classList.add('active');
            }
            item.innerHTML = `
                <img src="${player.img}" class="d-block w-100" alt="Slide" style="height:300px;">
            `;
            carouselInner.appendChild(item);
        });
    };

    const relatedProduct = (data) => {
        var carouselProduct = document.getElementById('carouselProduct');
        var product = ``;
        data.forEach((item) => {
            product += `<div class="col-md-3 mb-3">
                            <div class="card text-dark bg-light mb-3" >
                                <div class="card-header" style="height:100px;">${item.title}</div >
                                    <img src=${item.img} class="ps-3 pe-3 mt-3" alt="Card image cap" style="height:200px;">
                                    <div class="card-body">
                                        <a href="#" class="btn btn-primary">LEARN MORE</a>
                                    </div>
                                </div>
                            </div>
                           </div>`;
        });
        carouselProduct.innerHTML = product;
    };

</script>