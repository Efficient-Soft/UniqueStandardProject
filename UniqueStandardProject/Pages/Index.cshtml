<script>
    document.addEventListener('DOMContentLoaded', function () {
        var url = 'api/products/masterList';
        var url1 = 'api/products/productDetail';


        fetch(url1).then((res) => res.json())
            .then((response) => {
                console.log(response);
                if (response.success) {
                    if (Array.isArray(response.data)) {
                        displayImage(response.data);
                        setupPagination(response.data);
                        /*displayPageInfo();*/
                    } else {
                        console.error('The data received is not an array.');
                    }
                } else {
                    console.error('Request was not successful.');
                }
            })
            .catch((error) => {
                console.error('Error fetching data:', error);
            });


        const itemsPerPage = 9;
        let currentPage = 1;

        function displayImage(images) {
            const product = document.getElementById("project");
            var html = ``;

            if (images && Array.isArray(images) && images.length > 0) {
                const start = (currentPage - 1) * itemsPerPage;
                const end = currentPage * itemsPerPage;

                for (let i = start; i < end && i < images.length; i++) {
                    images.sort((a, b) => a.sortOrder - b.sortOrder);
                    let sort = images[i].sortOrder;
                    
                    var detailUrl = `/Detail?detailId=${encodeURIComponent(images[i].detailId)}&title=${encodeURIComponent(images[i].title)}&description=${encodeURIComponent(images[i].description)}`;
                    console.log(detailUrl);
                    html +=
                        `<div class="portfolio-item wow fadeInUp col-md-4">
                                    <a href="${detailUrl}" class="portfolio-popup">
                                 <img src="${images[i].img}" class="shadow p-3 bg-white img-rounded" style="width: 100%; height: 250px; object-fit: cover;">
                                 <div class="portfolio-overlay">
                                </div>
                                </a>
                                <p class="name" style="text-color:primary; font-size: 15px;width: 100%;"><center>${images[i].title}</center></p>
                          </div>`;
                }

                product.innerHTML = html;
            }
        }

        function setupPagination(images) {
            const container = document.getElementById('project');
            container.innerHTML = '';

            if (images && Array.isArray(images) && images.length > 0) {
                const totalPages = Math.ceil(images.length / itemsPerPage);
                const pagination = document.getElementById('pagination');
                pagination.innerHTML = '';

                for (let i = 1; i <= totalPages; i++) {
                    const li = document.createElement('li');
                    const a = document.createElement('a');
                    a.textContent = 'Previous';
                    a.textContent = i;

                    if (i === currentPage) {
                        displayImage(images);
                    }

                    a.addEventListener('click', function () {
                        currentPage = i;
                        displayImage(images);
                    });

                    li.appendChild(a);
                    pagination.appendChild(li);
                }
            }
        }

        displayImage(currentPage);
        setupPagination(currentPage);


        fetch(url)
            .then((res) => res.json())
            .then((response) => {
                console.log(response);
                if (response.success) {
                    if (Array.isArray(response.data)) {
                        displayData(response.data);
                    } else {
                        console.error('The data received is not an array.');
                    }
                } else {
                    console.error('Request was not successful.');
                }
            })
            .catch((error) => {
                console.error('Error fetching data:', error);
            });

        const displayData = (data) => {
            var mission = document.getElementById('mission');
            var html = ``;
            data.forEach((player) => {
                html +=
                    `<div class="col-md-12 mt-5">
                                <h1 class="m-3">Vision</h1>
                                <p class="name" style="color:primary; font-size: 20px;width: 100%;">${player.vision}</p>
                                <h1 class= "m-3">Mission</h1>
                                <p class="name mb-3" style="color:primary; font-size: 20px;width: 100%;">${player.mission}</p>
                            </div>`;
            });
            if (mission) {
                mission.innerHTML = html;
            } else {
                console.error("Element not found or not loaded yet.");
            }

        };

    });

</script>


