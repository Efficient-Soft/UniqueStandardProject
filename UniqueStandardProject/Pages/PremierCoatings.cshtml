    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-5">Premier Coatings</h1>
        </div>
        <div class="row wow fadeInUp" id="premier">
        </div>
    </div>
</div>
<!-- Service End -->
<!-- JavaScript Libraries -->
<script src="~/frontend/js/jquery-3.2.1.min.js"></script>
<script src="~/frontend/js/bootstrap.bundle.js"></script>
<script src="~/frontend/lib/wow/wow.min.js"></script>
<script src="~/frontend/lib/easing/easing.min.js"></script>
<script src="~/frontend/lib/waypoints/waypoints.min.js"></script>
<script src="~/frontend/lib/counterup/counterup.min.js"></script>
<script src="~/frontend/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="~/frontend/lib/tempusdominus/js/moment.min.js"></script>
<script src="~/frontend/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="~/frontend/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<!-- Template Javascript -->
<script src="~/frontend/js/main.js"></script>

<script>
    var url = 'api/products/productDetail?productId=1';

    var item = document.getElementById('premier');

    fetch(url)
        .then((res) => res.json())
        .then((response) => {
            console.log(response);
            if (response.success) {
                if (Array.isArray(response.data)) {
                    generateHtml(response.data);
                } else {
                    console.error('The data received is not an array.');
                }
            } else {
                console.error('Request was not successful.');
            }
        })
        .catch((error) => {
            console.error('Error fetching data:', error);
        });

    const generateHtml = (data) => {
        var html = ``;
        data.forEach((player) => {
            html +=
                `<div class="col-md-4">
                    <img src="${player.img}" style="width: 100%; height: 300px; object-fit: cover;">
                    <p class="name" style="color:primary; font-size: 20px;width: 100%;"><center>${player.title}</center></p>
                </div>`;
        });
        item.insertAdjacentHTML('afterBegin', html);
    };

</script>
