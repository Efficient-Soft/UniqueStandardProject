@page
@model UniqueStandardProject.Pages.PremierCoatingsModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        border-radius: 10%;
        object-fit:cover;
    }
</style>

<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-5">Premier Coatings</h1>
        </div>
        <div class="row wow fadeInUp" id="premier">
        </div>
    </div>
</div>
<!-- Service End -->

<script>
    var url = 'api/products/productDetail?productId=1';

    fetch(url)
        .then((res) => res.json())
        .then((response) => {
            console.log(response);
            if (response.success) {
                if (Array.isArray(response.data)) {
                    generateHtml(response.data);
                } else {
                    console.error('The data received is not an array.');
                }
            } else {
                console.error('Request was not successful.');
            }
        })
        .catch((error) => {
            console.error('Error fetching data:', error);
        });

    const generateHtml = (data) => {
        var item = document.getElementById('premier');
        data.sort((a, b) => a.sortOrder - b.sortOrder);
        var html = ``;
        data.forEach((player) => {
            var detailUrl = `/Detail?detailId=${encodeURIComponent(player.detailId)}&title=${encodeURIComponent(player.title)}`;
            html +=
                `<div class="col-md-4 mb-5">
                   <div class="text-dark bg-light" >
                      <div style="height:50px;" class="pt-3"><center>${player.title}</center></div >
                         <a href="${detailUrl}">
                           <img src=${player.img} class="ps-3 pe-3 pt-3 pb-3 mb-3" alt="Card image cap" style="width:100%;height:200px;">
                         </a>
                      </div>
                   </div>
                </div>`;
        });

        if (item) {
            item.innerHTML = html;
        } else {
            console.error("Element not found or not loaded yet.");
        }
    };

</script>
