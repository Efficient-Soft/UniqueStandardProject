<!DOCTYPE html>
<html lang="en">

<head>

    @await Html.PartialAsync("_title_meta.cshtml")
    @*//1*@
    @RenderSection("styles", false)
    @await Html.PartialAsync("_head_css.cshtml")


</head>

<body data-topbar="light" data-layout="horizontal">

    <!-- Loader -->
    <div id="preloader1">
        <div id="status">
            <div class="spinner-chase">
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
                <div class="chase-dot"></div>
            </div>
        </div>
    </div>

    <!-- Begin page -->
    <div id="layout-wrapper">
        @await Html.PartialAsync("_horizontal.cshtml")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @await Html.PartialAsync("_page_title.cshtml")

                    @RenderBody()
                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
            @await Html.PartialAsync("_footer.cshtml")
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    @*//2*@
    @RenderSection("externalhtml", required: false)
    @await Html.PartialAsync("_right_sidebar.cshtml")
    @*<script src="~/js/firebase.js" type="module"></script>*@
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#status').fadeOut();
            $('#preloader1').delay(500).fadeOut();

